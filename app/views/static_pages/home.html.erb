<% if signed_in? %>
  <div class="row-fluid">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/follow_stats' %>
      </section>
      <section>
        <%= render 'shared/notification_stats' %>
      </section>
      <section>
        <%= render 'shared/photo_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
<div class="center hero-unit">
  <h1>Ready. Set. Ditermini.</h1>

  <h2>
    Night out? Big presentation? Stuck in the fitting room? </br> Figure out what looks best on you and help others decide what works for them.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>
